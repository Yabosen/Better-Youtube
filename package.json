{
  "name": "better-youtube",
  "version": "2.0.0",
  "description": "Open Source YouTube Desktop Client with Plugin System",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "start": "npm run build:main && electron ."
  },
  "keywords": [
    "youtube",
    "electron",
    "desktop",
    "plugins"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.11",
    "cross-fetch": "^4.0.0",
    "discord-rpc": "^4.0.1",
    "ytdl-core": "^4.11.5",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.betteryoutube.app",
    "productName": "Better YouTube",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
